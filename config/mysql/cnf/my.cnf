# custom.cnf - Configuración corregida para MySQL 8.0+
[mysqld]
# Configuración de red (obligatoria para conexiones remotas)
bind-address            = 0.0.0.0
skip_name_resolve       = 1

# Autenticación (solo necesario si usas MySQL 5.x)
# default-authentication-plugin = mysql_native_password  # ¡Eliminar para MySQL 8+!

# Rendimiento ajustado
innodb_buffer_pool_size = 1G
max_connections         = 200
key_buffer_size         = 256M
thread_cache_size       = 10

# Seguridad reforzada
local_infile            = 0
# require_secure_transport = ON  # Opcional: Requiere SSL

